	function EndLoader() {
		$('#Loader').fadeOut("slow").hide();



	}
	function AlertMsg(message, title, time) {

		swal({
			title: title,
			text: message,
			timer: time,
			showConfirmButton: false,
			icon: "error"
		});
	}
