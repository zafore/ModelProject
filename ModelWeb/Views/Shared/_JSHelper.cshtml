<script>
    function cleanMoney(value1) {
        try {
            const cleaned = parseFloat(value1.replace(/[,٫]/g, ''));
            return cleaned;
        }
        catch (e) {
            console.log(e);
        }

    }


    function ToMoney(value1) {
        try {
            return new Intl.NumberFormat().format(value1);

        }
        catch (e) {
            console.log(e);
        }

    }



		function StartLoader() {


			$('#Loader').fadeIn('slow').show();


